---
import HeaderLink from "./HeaderLink.astro";
import "../styles/global.css";
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const isRootPage = pathname === "";
---

<header
	id="site-header"
	class="fixed top-0 left-0 w-full z-[100] transition-colors duration-300 bg-cream shadow-md"
>
	<nav class="flex items-center md:justify-center justify-between px-6 py-5">
		<!-- Logo / Título (visible siempre) -->
		<div class="flex md:hidden items-center">
			<a href="/" class="text-2xl font-title font-bold text-walnut-deep">
				El Sablón
			</a>
		</div>

		<!-- Links Desktop (ocultos en móvil) -->
		<div class="internal-links hidden md:flex gap-6">
			<HeaderLink href="/">Inicio</HeaderLink>
			<HeaderLink href="/productos">Productos</HeaderLink>
			<HeaderLink href="/encuentranos">Dónde Encontrarnos</HeaderLink>
			<HeaderLink href="/contacto">Contacto</HeaderLink>
		</div>

		<!-- Botón hamburguesa (solo móvil) -->
		<button 
			id="menu-toggle"
			class="md:hidden z-[110] p-2 rounded-lg hover:bg-leather/10 transition-colors relative"
			aria-label="Abrir menú"
		>
			<svg id="menu-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-walnut-deep" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
			</svg>
			<svg id="close-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-walnut-deep hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
			</svg>
		</button>

		<!-- Redes sociales Desktop -->
		<div class="social-links absolute hidden md:flex right-0 top-5 gap-4 mr-5">
			<a href="https://www.facebook.com/profile.php?id=61560506500874" target="_blank" class="hover:text-leather transition-colors">
				<span class="sr-only">Siguenos en Facebook</span>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 320 512"
					aria-hidden="true"
					width="32"
					height="32"
					class="fill-current"
					><path
						d="M80 299.3V512H196V299.3h86.5l18-97.8H196V166.9c0-51.7 20.3-71.5 72.7-71.5c16.3 0 29.4 .4 37 1.2V7.9C291.4 4 256.4 0 236.2 0C129.3 0 80 50.5 80 159.4v42.1H14v97.8H80z"
					></path></svg
				>
			</a>
			<a
				href="https://www.instagram.com/elsablonartesania"
				target="_blank"
				class="hover:text-leather transition-colors"
			>
				<span class="sr-only">Siguenos en Instagram</span>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 448 512"
					aria-hidden="true"
					width="32"
					height="32"
					class="fill-current"
				>
					<path
						d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"
					></path>
				</svg>
			</a>
		</div>
	</nav>

	<!-- Menú móvil (overlay) -->
	<div 
		id="mobile-menu" 
		class="fixed inset-0 bg-cream transform translate-x-full transition-transform duration-300 ease-in-out z-[105] md:hidden overflow-y-auto"
		style="padding-top: 80px;"
	>
		<div class="flex flex-col items-center justify-start pt-8 pb-8 space-y-8 text-center min-h-full">
			<a href="/" class="text-3xl font-title font-bold text-walnut-deep hover:text-leather transition-colors mobile-menu-link">
				Inicio
			</a>
			<a href="/productos" class="text-3xl font-title font-bold text-walnut-deep hover:text-leather transition-colors mobile-menu-link">
				Productos
			</a>
			<a href="/encuentranos" class="text-3xl font-title font-bold text-walnut-deep hover:text-leather transition-colors mobile-menu-link">
				Dónde Encontrarnos
			</a>
			<a href="/contacto" class="text-3xl font-title font-bold text-walnut-deep hover:text-leather transition-colors mobile-menu-link">
				Contacto
			</a>

			<!-- Redes sociales en móvil -->
			<div class="flex gap-6 mt-8">
				<a href="https://www.facebook.com/profile.php?id=61560506500874" target="_blank" class="text-walnut-deep hover:text-leather transition-colors">
					<span class="sr-only">Facebook</span>
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" width="40" height="40" class="fill-current">
						<path d="M80 299.3V512H196V299.3h86.5l18-97.8H196V166.9c0-51.7 20.3-71.5 72.7-71.5c16.3 0 29.4 .4 37 1.2V7.9C291.4 4 256.4 0 236.2 0C129.3 0 80 50.5 80 159.4v42.1H14v97.8H80z"></path>
					</svg>
				</a>
				<a href="https://www.instagram.com/elsablonartesania" target="_blank" class="text-walnut-deep hover:text-leather transition-colors">
					<span class="sr-only">Instagram</span>
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="40" height="40" class="fill-current">
						<path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"></path>
					</svg>
				</a>
			</div>
		</div>
	</div>

	<script type="module" define:vars={{ pathname, isRootPage }}>
		document.addEventListener("DOMContentLoaded", () => {
			const header = document.getElementById("site-header");
			const sentinel = document.getElementById("header-sentinel");
			const menuToggle = document.getElementById("menu-toggle");
			const mobileMenu = document.getElementById("mobile-menu");
			const menuIcon = document.getElementById("menu-icon");
			const closeIcon = document.getElementById("close-icon");
			const mobileMenuLinks = document.querySelectorAll(".mobile-menu-link");

			// Header scroll effect
			if (!header) return;

			if (!isRootPage) {
				header.classList.add("bg-cream/100", "shadow-md");
			} else if (sentinel) {
				const observer = new IntersectionObserver(
					([entry]) => {
						if (entry.isIntersecting) {
							header.classList.remove(
								"bg-cream",
								"bg-transparent",
								"backdrop-blur-md",
								"shadow-md",
								"z-50"
							);
						} else {
							header.classList.add(
								"bg-cream",
								"shadow-md",
								"z-50",
								"backdrop-blur-md"
							);
						}
					},
					{ root: null, threshold: 0 },
				);
				observer.observe(sentinel);
			}

			// Mobile menu toggle
			let isMenuOpen = false;
			let scrollPosition = 0;

			menuToggle?.addEventListener("click", () => {
				isMenuOpen = !isMenuOpen;
				
				if (isMenuOpen) {
					// Guardar posición actual del scroll
					scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
					
					mobileMenu?.classList.remove("translate-x-full");
					mobileMenu?.classList.add("translate-x-0");
					menuIcon?.classList.add("hidden");
					closeIcon?.classList.remove("hidden");
					
					// Fijar el body en la posición actual
					document.body.style.position = "fixed";
					document.body.style.top = `-${scrollPosition}px`;
					document.body.style.width = "100%";
				} else {
					mobileMenu?.classList.add("translate-x-full");
					mobileMenu?.classList.remove("translate-x-0");
					menuIcon?.classList.remove("hidden");
					closeIcon?.classList.add("hidden");
					
					// Restaurar scroll
					document.body.style.position = "";
					document.body.style.top = "";
					document.body.style.width = "";
					window.scrollTo(0, scrollPosition);
				}
			});

			// Close menu when clicking a link
			mobileMenuLinks.forEach(link => {
				link.addEventListener("click", () => {
					mobileMenu?.classList.add("translate-x-full");
					mobileMenu?.classList.remove("translate-x-0");
					menuIcon?.classList.remove("hidden");
					closeIcon?.classList.add("hidden");
					
					// Restaurar scroll
					document.body.style.position = "";
					document.body.style.top = "";
					document.body.style.width = "";
					window.scrollTo(0, scrollPosition);
					
					isMenuOpen = false;
				});
			});
		});
	</script>
</header>