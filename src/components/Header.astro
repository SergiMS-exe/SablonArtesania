---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const isRootPage = pathname === '';
---

<header
  id="site-header"
  class={`transition-colors duration-300
    ${isRootPage
      ? "fixed top-0 left-0 w-full z-50 bg-transparent"
      : "static bg-white bg-opacity-100 shadow-md"}`
  }
>
	<nav class="flex items-center justify-between px-6 py-4">
		<div></div>
		<!-- <h2 class="text-lg font-bold">
			<a href="/" class="text-black no-underline">{SITE_TITLE}</a>
		</h2> -->
		<div class="internal-links flex gap-6">
			<HeaderLink href="/">Inicio</HeaderLink>
			<HeaderLink href="/blog">Porductos</HeaderLink>
			<HeaderLink href="/about">Donde Encontrarnos</HeaderLink>
		</div>
		<div class="social-links hidden md:flex gap-4">
			<a href="https://twitter.com/astrodotbuild" target="_blank">
				<span class="sr-only">Follow Astro on Twitter</span>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 320 512"
					aria-hidden="true"
					width="32"
					height="32"
					><path
						d="M80 299.3V512H196V299.3h86.5l18-97.8H196V166.9c0-51.7 20.3-71.5 72.7-71.5c16.3 0 29.4 .4 37 1.2V7.9C291.4 4 256.4 0 236.2 0C129.3 0 80 50.5 80 159.4v42.1H14v97.8H80z"
					></path></svg
				>
			</a>
			<a
				href="https://www.instagram.com/elsablonartesania"
				target="_blank"
			>
				<span class="sr-only">Siguenos en Instagram</span>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 448 512"
					aria-hidden="true"
					width="32"
					height="32"
				>
					<path
						d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"
					></path>
				</svg>
			</a>
		</div>
	</nav>
	<script type="module" define:vars={{ pathname, isRootPage }}>
		// Esperamos a que el DOM esté cargado
		document.addEventListener("DOMContentLoaded", () => {
			const header = document.getElementById("site-header");
			if (!header) return;

			// Opciones del observer: sin root (viewport), threshold 0
			const options = {
				root: null,
				threshold: 0,
			};

			// Callback que se ejecuta al entrar/salir del sentinel
			const onIntersect = ([entry]) => {
				if (entry.isIntersecting) {
					// Cuando el sentinel está visible: header totalmente transparente
					header.classList.remove(
						"bg-white",
						"bg-opacity-90",
						"backdrop-blur-md",
						"shadow-md",
					);
				} else {
					// Cuando pasas el sentinel: header semitransparente con fondo blanco
					header.classList.add(
						"bg-white",
						"bg-opacity-90",
						"backdrop-blur-md",
						"shadow-md",
					);
				}
			};

			// Creamos el observer
			const observer = new IntersectionObserver(onIntersect, options);

			// Observamos el sentinel (un elemento <div id="header-sentinel"> justo bajo el hero)
			const sentinel = document.getElementById("header-sentinel");
			console.log({ pathname }, { isRootPage });
			if (sentinel && { isRootPage }) observer.observe(sentinel);
		});
	</script>
</header>
<style>
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
