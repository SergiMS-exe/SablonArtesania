---
import type { HTMLAttributes } from "astro/types";

export interface Props {
    id: number;
    title: string;
    description: string;
    image: string;
}
const { title, description, image, ...props } = Astro.props as Props;
---

<article
    class="border rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200"
>
    <img src={image} alt={title} class="w-full h-48 object-cover" />
    <div class="p-4 bg-cream">
        <h2 class="text-xl font-semibold mb-2">{title}</h2>
        <p class="text-gray-600 mb-4">{description}</p>
        <a
            href={`/productos/${Astro.props.id}`}
            class="inline-block mt-auto text-blue-600 hover:underline"
        >
            Ver detalles
        </a>
    </div>
</article>
